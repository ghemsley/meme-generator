<% js_custom_add("var user_id = #{@user.id}") %>
<% js_custom_add_file('js/domToImage.bundle.js') %>
<h2 class='header2'>Create a meme</h2>
<div class='form-container'>
  <form enctype="multipart/form-data" id='meme-form' onSubmit='return formSubmit(event)'>
    <input type='text' name='meme[name]' placeholder='Name' id='name' class='text-input' required pattern='.{1,100}' title='100 characters maximum'>
    <input type='text' name='meme[top_caption]' placeholder='Top caption' id='top-caption' class='text-input' required pattern='.{1,100}' title='100 characters maximum'>
    <input type='text' name='meme[bottom_caption]' placeholder='Bottom caption' id='bottom-caption' class='text-input' required pattern='.{1,100}' title='100 characters maximum'>
    <input type='file' accept='image/*' name='meme[image]' id='image-upload' class='image-upload' required >
    <input type='submit' value='Generate' class='submit-button'>
  </form>
</div>
