<% js_custom_add_file('js/tinySlider.bundle.js') %>
<h2 class='header2'>Latest memes</h2>
<% if !@memes&.empty? %>
  <div class='slider'>
    <% @memes.each do |meme| %>
      <a href='/memes/<%= meme.id %>' class='meme-link'>
        <div class='meme slider-meme'>
          <h2 class='meme-name'><%= meme.name %></h2>
          <img class='meme-image' src='<%= meme.image.url %>' />
          <div class='likes-comments'>
            <% if !meme.likes.empty? %>
              <p class='likes'><%= meme.likes.count %> like<%= meme.likes.count > 1 ? 's' : '' %></p>
            <% end %>
            <% if !meme.comments.empty? %>
              <p><%= meme.comments.count %> comment<%= meme.comments.count > 1 ? 's' : '' %></p>
            <% end %>
          </div>
        </div>
      </a>
    <% end %>
  </div>
<% else %>
  <p>No memes have been created yet. Sign up and create one!</p>
<% end %>
